#! /bin/sh
. /etc/default/lejos
# We act as a server for USB and Bluetooth network connections. Bridge
# both types of connections together and run dhcpd on them
# get our network address
LJBIN=${LEJOS_HOME}/bin
HOSTNAME=`hostname`
# Now we start wlan
# kill any existing processes
killall wpa_supplicant udhcpc 2> /dev/null
# check for interface
iface=`ifconfig -a | grep wlan0`
if [ "$iface" = "" ]; then
  echo "no wlan device found"
  exit
fi
# start wpa_supplicant note must use the Lego version not the default system
echo hostname is ${HOSTNAME}
echo searching for wlan
if [ -f ${LJBIN}/utils/wpa_supplicant.conf ];
then
  echo "using lejos config"
  ${LJBIN}/wpa_supplicant -B -Dwext -iwlan0 -c${LJBIN}/utils/wpa_supplicant.conf > /dev/null 2>&1
else
  echo "using system config"
  ${LJBIN}/wpa_supplicant -B -Dwext -iwlan0 -c/etc/wpa_supplicant.conf > /dev/null 2>&1
fi
count=10
while [ $count -gt 0 ]; do
  sleep 2 
  state=`wpa_cli status | grep state 2> /dev/null`
  echo $state
  case $state in
    *COMPLETED) break;;
    *) let count=count-1;;
  esac
done 
wpa_cli status | grep sid 2> /dev/null
# get ip address etc.
echo requesting IP address
exec udhcpc --retries=10 --now -i wlan0 -h ${HOSTNAME}

